<view class="cu-modal {{modalName =='formChat'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">预约沟通</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="padding-xl" style="background: #ffffff;">
      <form bindsubmit="submitForm">
        <view class="model-form" slot="form">
          <input bindinput="nameInput" name="nameInput" class="model-form-input text-left" cursorSpacing="145" placeholder="您的姓名"
            placeholderClass="model-placeholder" value="{{username}}"></input>
          <input bindinput="houseInput" name="houseInput" class="model-form-input text-left" cursorSpacing="145" placeholder="意向房源"
            placeholderClass="model-placeholder" value="{{houseDetail.loupanmingcheng}}">{{houseDetail.loupanmingcheng}}</input>
          <input bindinput="phoneInput" name="phoneInput" class="model-form-input text-left" cursorSpacing="90" maxlength="11"
            placeholder="您的手机号" placeholderClass="model-placeholder" value="{{userphone}}"></input>
        </view>
        <view class="model-btn" slot="btn">
          <button form-type="submit" class="model-submit-btn" hoverClass="model-btn-hover">
            预约沟通
          </button>
        </view>
      </form>
    </view>
  </view>
</view>