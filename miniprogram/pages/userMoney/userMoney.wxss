.head {
  width: 100%;
  height: 160rpx;
  position: relative;
  color: #fff;
}

.head-text {
  font-size: 26rpx;
  top: 20rpx;
}

.head-money,.head-text {
  position: absolute;
  left: 40rpx;
}

.head-money {
  bottom: 20rpx;
  font-size: 60rpx;
  font-weight: bolder;
}

.head-yuan {
  font-size: 40rpx;
  font-weight: 400;
  margin-left: 18rpx;
}

.refresh-btn {
  position: absolute;
  bottom: 20rpx;
  right: 40rpx;
  padding: 8rpx 18rpx;
  background: #df222e;
  border-radius: 4rpx;
}

.input-list {
  background: #fff;
}

.input-item {
  position: relative;
  display: flex;
  align-items: center;
  margin: 0 40rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
  border-bottom: 2rpx solid #e6e6e6;
}

input {
  width: 86%;
  height: 50rpx;
}

.red {
  color: #ff0010;
  font-size: 32rpx;
  margin-right: 12rpx;
  width: 12rpx;
}

.lock {
  width: 30rpx;
  height: 36rpx;
}

.icon-down,.lock {
  position: absolute;
  right: 0;
}

.icon-down {
  width: 26rpx;
  height: 16rpx;
}

.right-text {
  position: absolute;
  right: 0;
}

.charge-money {
  padding: 30rpx 20rpx 10rpx 40rpx;
}

.charge-money-item {
  display: inline-block;
  width: 18%;
  text-align: center;
  padding: 22rpx 40rpx;
  border: 2rpx solid #f55548;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #f55548;
}

.active {
  background: #f55548;
  color: #fff;
}

.notice {
  padding: 30rpx 40rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 36rpx;
  background: #f3f3f3;
}

.btn {
  border-radius: 6rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
}

.btn,.history {
  text-align: center;
}

.history {
  margin: 30rpx 40rpx;
  font-size: 26rpx;
  color: #df222e;
}

.picker1 {
  width: 100%;
  background: #fff;
}

.mask,.picker1 {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
}

.mask {
  top: 0;
  right: 0;
  background: rgba(0,0,0,.4);
}
.bg-tr{
  background: #df222e
}
.clear {
  width: 34rpx;
  height: 34rpx;
  margin-right: 8rpx;
}