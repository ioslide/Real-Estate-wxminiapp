<form bindsubmit="submitForm">
  <view class="cu-form-group margin-top">
    <view class="title">姓名</view>
    <input class="title" name="nameInput" placeholder="姓名"></input>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">意向范围</view>
    <input class="title" name="dreamAddressInput" placeholder="意向范围"></input>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">我的预算</view>
    <input class="title" name="moneyInput" placeholder="我的预算"></input>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">心仪户型</view>
    <input class="title" name="housetypeInput" placeholder="心仪户型"></input>
  </view>

  <phoneCodeButton bind:verifySmsCode="verifySmsCode" />

  <view class="cu-form-group">
    <view class="title" style="padding-right:30rpx">验证码</view>
    <input class="title" name="codeInput" placeholder="验证码"></input>
  </view>

  <view class="footer-fixed">
    <button form-type="submit" class="items" style="border-radius:0">提交审核</button>
  </view>
</form>