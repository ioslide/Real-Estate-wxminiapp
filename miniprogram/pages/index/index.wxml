        </view>
      </view>
      <view data-index="0">
        <view class="item-inner-light">
          <image class="square-28" mode="aspectFit"
            src="../../assets/image/zuixinzixun.svg"></image>
          <text class="margin-top-10 cell-col-light">房产资讯</text>
        </view>
      </view>
      <view data-index="0">
        <view class="item-inner-light">
          <image class="square-28" mode="aspectFit"
            src="../../assets/image/yaoqinghaoyou.svg"></image>
