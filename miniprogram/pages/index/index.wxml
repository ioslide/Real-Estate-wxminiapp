  </view>
</view>

<view class="common-title ">
    <view class="cuIcon-titles common-title-left">地图找房</view>
  </view>
<view class="cu-card article margin-30">
  <map style="width: 100%;height: 240rpx;" bindcallouttap="gotoMap" bindcontroltap="gotoMap" bindlabeltap="gotoMap"
    bindmarkertap="gotoMap" bindpoitap="gotoMap" bindtap="gotoMap" id="myMap" latitude="30.65984" longitude="104.10194"
    scale="10" markers=""></map>
</view>


<view class="common-title ">
    <view class="cuIcon-titles common-title-left">推荐好盘</view>
  </view>

<view class="cu-card article" style="background:#f6f6f6">

  <!-- 广告轮播图 -->
  <swiper class="screen-swiper square-dot margin-20" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" style="height:110px;border-radius:10px">
    <swiper-item style="border-radius:10px" wx:for="{{$.adSwiperList}}" wx:key class="{{cardCur==index?'cur':''}}" >
      <view class="swiper-item"  style="border-radius:10px">
        <image src="{{item.lunbotutupian}}" mode="aspectFill" wx:if="{{item.shifouweitupian== true}}" style="border-radius:10px"></image>
        <video  style="border-radius:10px" src="{{item.lunbotushipin}}" poster="{{item.lunbotutupian}}" loop="{{false}}" muted="{{false}}"
          show-fullscreen-btn="true" title="{{item.lunbotubiaoti}}" enable-progress-gesture="{{true}}"
          show-play-btn="{{true}}" controls="{{true}}" objectFit="cover"
          wx:if="{{item.shifouweitupian == false}}"></video>
      </view>
    </swiper-item>
  </swiper>

  <!-- 推荐好盘 -->

  <view class="cu-item shadow margin-20" wx:for="{{$.allHouseList}}" wx:key="index"
    wx:if="{{item&&item.shifoushouyetuijian == true}}">
    <view class="title" bindtap="navHousedetail" data-id="{{item._id}}">
      <view class="text-cut">{{item.loupanmingcheng}}</view>
    </view>
    <view class="content" bindtap="navHousedetail" data-id="{{item._id}}">
      <image src="{{item.loupanxiangce[0]}}" mode="aspectFill"></image>
      <view class="desc">
        <view class=""> 建筑面积：{{item.jianzumianji}}</view>
        <view class="">{{item.chengshi}}</view>
        <view class="text-red">{{item.loupandanjia}}</view>
        <view>
          <view wx:for="{{item.biaoqian}}" class="cu-tag bg-grey light sm"
            style="border-radius:24px;margin: 5px 5px 0 0;">{{item}}</view>
        </view>
      </view>
    </view>
  </view>

</view>


