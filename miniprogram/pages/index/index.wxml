<view class="address-search-map-layer" style="height: 50px;">
  <view class="search-content-box" style="background-color: #FFF;border:0.5px #EEEEEE solid">
    <view bindtap="selectCity" class="address" wx:if="{{isShowLocation}}">
      <view class="current">成都</view>
      <text class="fhyfont iconxiala_fuzhi"></text>
    </view>
    <view class="line"></view>
    <view class="search-icon-layer">
      <text class="fhyfont icon-search"></text>
    </view>
    <view class="search">
      <input bindconfirm="searchArean" class="input" confirmType="搜索" placeholder="请搜索楼盘/城市/顾问关键字"
        type="text">请搜索楼盘/城市/顾问关键字</input>
    </view>
    <view catchtap="openMessage" class="map" style="color:{{mapFontColor}}" wx:if="{{showMessge}}">
      <text class="fhyfont iconmessage2 img"></text>
      <view class="redDots" wx:if="{{newsInt}}"></view>
    </view>
  </view>
</view>


<swiper class="card-swiper square-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000"
  duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
  <swiper-item wx:for="{{$.swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
    <view class="swiper-item">
      <image src="{{item.lunbotutupian}}" mode="aspectFill" wx:if="{{item.shifouweitupian== true}}"></image>
      <video src="{{item.lunbotushipin}}" poster="{{item.lunbotutupian}}" loop="{{false}}" muted="{{false}}"
        show-fullscreen-btn="true" title="{{item.lunbotubiaoti}}" enable-progress-gesture="{{true}}"
        show-play-btn="{{true}}" controls="{{true}}" objectFit="cover"
        wx:if="{{item.shifouweitupian == false}}"></video>
    </view>
  </swiper-item>
</swiper>
