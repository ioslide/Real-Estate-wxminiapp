<view class="common-title" style="margin-left: 20px;">
  <view class="cuIcon-titles common-title-left">{{detailhuodong.title}}</view>
</view>

<swiper class="card-swiper square-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000"
  duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
  <swiper-item wx:for="{{detailhuodong.image}}" wx:key="_id" class="{{cardCur==index?'cur':''}}">
    <view class="swiper-item">
      <image src="{{item}}" mode="aspectFill"></image>
    </view>
  </swiper-item>
</swiper>

<view class="common-title" style="margin-left: 20px;">
  <view class="cuIcon-titles common-title-left">视频介绍</view>
</view>

<view class="flex solid-bottom padding-30 align-center" style="padding-top: 0;padding-bottom:0;"
  wx:if="{{detailhuodong.huodongshipin}}">
  <video style="border-radius:10px;width:100%;height:150px" src="{{detailhuodong.huodongshipin[0]}}"
    poster="{{detailhuodong.image[0]}}" loop="{{false}}" muted="{{false}}" show-fullscreen-btn="true"
    title="{{detailhuodong.title}}" enable-progress-gesture="{{true}}" show-play-btn="{{true}}" controls="{{true}}"
    objectFit="cover"></video>
</view>

<view class="padding-30 bg-white">
  <view class="text-left " style="line-height:30px">
    <text class=" cu-tag bg-red text-white">{{detailhuodong.huodongchengshi}}</text>
    <text class="text-grey">   发布日期:{{detailhuodong.huodongriqi}}</text>
  </view>
  <view class="text-left" style="line-height:30px">
    {{detailhuodong.content}}
  </view>
</view>

<view class="common-title" style="margin-left: 20px;">
  <view class="cuIcon-titles common-title-left">文档详细介绍</view>
</view>
<view class="flex solid-bottom padding justify-start">
  <view bindtap="downloadFile" class="margin-left-30 cu-btn bg-red margin-tb-sm lg">下载文档</view>
</view>