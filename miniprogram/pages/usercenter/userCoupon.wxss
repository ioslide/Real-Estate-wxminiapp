.ticket-item {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 26rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 23rpx 0 rgba(12,3,6,0.1);
}

.ticket-left {
  width: 60%;
  height: 200rpx;
  padding: 27rpx 25rpx 14rpx 37rpx;
  border-radius: 10rpx 0 0 10rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.ticket-name {
  display: block;
  word-break: break-all;
  color: #333333;
  font-size: 30rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.ticket-name-bottom {
  margin-bottom: 25rpx;
}

.ticket-time,.ticket-number {
  display: block;
  color: #999999;
  font-size: 24rpx;
}

.ticket-time {
  padding-bottom: 5rpx;
  border-bottom: 1rpx dashed #E5E5E5;
}

.detail-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-text {
  color: #999999;
  font-size: 24rpx;
}

.arrow-bottom {
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  padding: 10rpx;
}

.ticket-right {
  width: 40%;
  height: 200rpx;
  padding: 44rpx 0 37rpx 0;
  box-sizing: border-box;
  border-radius: 0 10rpx 10rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(90deg,rgba(255,108,106,1) 0%,rgba(255,81,81,1) 100%);
  position: relative;
}

.ticket-right-invalid {
  background: rgba(179,187,194,1);
}

.price {
  color: #FFFFFF;
  font-size: 30rpx;
  word-break: break-all;
}

.price .number {
  color: #FFFFFF;
  font-size: 43rpx;
  font-weight: bold;
  word-break: break-all;
}

.get-ticket {
  display: block;
  width: 140rpx;
  height: 42rpx;
  line-height: 42rpx;
  margin-top: 10rpx;
  border-radius: 20rpx;
  background-color: #fff;
  text-align: center;
  color: #FF4946;
  font-weight: bold;
  font-size: 24rpx;
}

.use-box {
  clear: both;
  display: flex;
}

.get-ticket2 {
  display: inline-block;
  width: 100rpx;
  height: 42rpx;
  line-height: 42rpx;
  margin-top: 10rpx;
  border-radius: 20rpx;
  background-color: #fff;
  text-align: center;
  color: #FF4946;
  font-weight: bold;
  font-size: 24rpx;
  flex: 1;
}

.to-use {
  background-color: #FF6C6A;
  color: #FFFFFF;
  border-radius: 20rpx;
  border: 2rpx solid rgba(255,255,255,1);
}

.to-use2 {
  background-color: #FF6C6A;
  color: #FFFFFF;
  border-radius: 20rpx;
  border: 2rpx solid rgba(255,255,255,1);
  margin-left: 16rpx;
}

.use-box button {
  padding-left: 0!important;
  padding-right: 0!important;
  box-sizing: content-box!important;
}

.to-use-invalid {
  border: 2rpx solid rgba(255,255,255,1);
  background: rgba(179,187,194,1);
  color: #FFFFFF;
}

.received_ticket {
  width: 137rpx;
  height: 137rpx;
  position: absolute;
  top: -20rpx;
  right: -15rpx;
}

.detail {
  width: 100%;
  padding: 33rpx 40rpx 24rpx 40rpx;
  word-break: break-all;
  background-color: #fff;
  border-radius: 0 0 10rpx 10rpx;
  box-shadow: 0 4rpx 23rpx 0 rgba(12,3,6,0.1);
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153,153,153,1);
}

.getMoreTicket {
  color: white;
  font-size: 24rpx;
  margin-top: 5rpx;
}