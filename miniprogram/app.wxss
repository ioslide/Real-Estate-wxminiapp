@import "style/main.wxss";
@import "style/icon.wxss";

.model-title {
  position: relative;
  margin-top: 164rpx;
  margin-bottom: 36rpx;
  line-height: 44rpx;
  font-size: 44rpx;
  text-align: center;
  font-weight: 500;
  color: rgba(25,25,60,1);
  z-index: 1;
}

.model-subTitle {
  position: relative;
  margin: 0 57rpx;
  margin-bottom: 74rpx;
  font-size: 28rpx;
  text-align: center;
  font-weight: 400;
  color: rgba(99,114,128,1);
  line-height: 40rpx;
  z-index: 1;
}

.model-form {
  position: relative;
  margin-bottom: 38rpx;
}

.model-form-input {
  margin: 0 48rpx;
  height: 88rpx;
  padding: 0 20rpx;
  padding: 0 20rpx;
  background: rgba(245,246,250,1);
  border-radius: 12rpx;
  margin-bottom: 28rpx;
}

.model-placeholder {
  padding-left: 32rpx;
  font-size: 30rpx;
  color: rgba(25,25,62,0.3);
}

.model-btn {
  position: relative;
  margin-bottom: 48rpx;
}

.model-submit-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  margin: 0 48rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(255,255,255,1);
  background-color: rgba(61,126,255,1);
  border-radius: 12rpx;
}

.model-btn-hover {
  background-color: rgb(11,86,236);
}


.common-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 84rpx;
  margin-bottom: 26rpx;
}

.common-title-left {
  height: 36rpx;
  line-height: 36rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: rgba(25, 25, 62, 1);
}

.common-title-right {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 146rpx;
  height: 64rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(147, 153, 165, 1);
  border-radius: 32rpx;
  border: 1px solid rgba(239, 239, 239, 1);
}
